<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cMainatoS7.Views.vActualizarEstudiante"
             Title="vActualizarEstudiante">
    <VerticalStackLayout>
        <Label Text="Actualizar Estudiante" HorizontalOptions="Center" VerticalOptions="Start" />
        <Entry x:Name="txtNombre" Placeholder="Nombre" />
        <Entry x:Name="txtApellido" Placeholder="Apellido" />
        <Entry x:Name="txtEdad" Placeholder="Edad" Keyboard="Numeric" />
        <Button Text="Actualizar" Clicked="btnActualizar_Clicked" />
    </VerticalStackLayout>
</ContentPage>